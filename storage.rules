rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regra: Apenas usuários logados podem acessar a pasta 'pdfs'
    match /pdfs/{userId}/{allPaths=**} {
      // O usuário só pode ler e escrever na sua própria pasta.
      // O {userId} no caminho do arquivo deve ser o mesmo do usuário logado.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}